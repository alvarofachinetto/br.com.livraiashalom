<Window x:Class="br.com.livrariashalom.View.TelaPagarConta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:br.com.livrariashalom.View"
        mc:Ignorable="d"
        Title="TelaPagarConta" Height="450" Width="800" Background="Black">
    <Grid>
        <Label Content="Código" HorizontalAlignment="Left" Margin="66,62,0,0" VerticalAlignment="Top" Foreground="Yellow" FontWeight="Bold"/>
        <Label Content="Data" HorizontalAlignment="Left" Margin="66,93,0,0" VerticalAlignment="Top" Foreground="Yellow" FontWeight="Bold"/>
        <Label Content="Descrição" HorizontalAlignment="Left" Margin="407,62,0,0" VerticalAlignment="Top" Foreground="Yellow" FontWeight="Bold"/>
        <Label Content="Valor" HorizontalAlignment="Left" Margin="66,127,0,0" VerticalAlignment="Top" Foreground="Yellow" FontWeight="Bold"/>
        <Label Content="Data Vencimento" HorizontalAlignment="Left" Margin="66,158,0,0" VerticalAlignment="Top" Foreground="Yellow" FontWeight="Bold"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="66,189,0,0" VerticalAlignment="Top" Foreground="Yellow" FontWeight="Bold"/>
        <ComboBox x:Name="cmbStatus" HorizontalAlignment="Left" Margin="211,193,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Pagar"></ComboBoxItem>
            <ComboBoxItem Content="Pago"></ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="txtValor" HorizontalAlignment="Left" Height="23" Margin="211,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDescricao" HorizontalAlignment="Left" Height="73" Margin="552,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <TextBox x:Name="txtCodigoPagarConta" HorizontalAlignment="Left" Height="23" Margin="211,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtData" HorizontalAlignment="Left" Height="23" Margin="211,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDataVencimento" HorizontalAlignment="Left" Height="23" Margin="211,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSalvarContaPagar" Content="Salvar" HorizontalAlignment="Left" Margin="617,189,0,0" VerticalAlignment="Top" Width="93" Height="31" Click="BtnSalvarContaPagar_Click"/>
        <DataGrid x:Name="dgPagarConta" HorizontalAlignment="Left" Height="143" Margin="66,242,0,0" VerticalAlignment="Top" Width="644" MouseDoubleClick="dgPagarConta_MouseDoubleClick"/>

    </Grid>
</Window>
