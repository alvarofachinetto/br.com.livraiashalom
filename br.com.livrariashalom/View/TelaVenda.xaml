        <TextBox x:Name="txtQtd" HorizontalAlignment="Left" Height="23" Margin="163,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Label Content="Produto" HorizontalAlignment="Left" Margin="502,256,0,0" VerticalAlignment="Top" Foreground="#FFFFE800" FontWeight="Bold"/>
        <TextBox x:Name="txtCodProduto" HorizontalAlignment="Left" Height="23" Margin="623,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
